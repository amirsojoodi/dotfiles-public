set tabstop=2
set shiftwidth=2    " Indents will have a width of 4

set softtabstop=2   " Sets the number of columns for a TAB

set noexpandtab       " Expand TABs to spaces
set smarttab
set smartindent
set cindent
set autoindent
set showmatch
set history=1000
set undolevels=1000
set visualbell
set noerrorbells
set foldmethod=indent
set foldlevel=99
" set number
set tags=tags           " This is to use ctags

" colorscheme ron
syntax enable
